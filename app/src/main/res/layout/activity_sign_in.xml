<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/reglogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/name"
        android:layout_width="260dp"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_below="@+id/reglogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/reglogo"
        android:layout_marginTop="22dp"
        android:text="Name *"
        android:textColor="#FFFFFFFC"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/reg_last_name"
        android:layout_width="260dp"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/tv_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_last_name"
        android:layout_alignLeft="@+id/reg_last_name"
        android:layout_below="@+id/name"
        android:layout_marginTop="22dp"
        android:text="Last Name *"
        android:textColor="#FFFFFFFC"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/reg_email"
        android:layout_width="260dp"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_below="@+id/reg_last_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_email"
        android:layout_alignLeft="@+id/reg_email"
        android:layout_below="@+id/reg_last_name"
        android:layout_marginTop="22dp"
        android:text="Email *"
        android:textColor="#FFFFFFFC"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/reg_password"
        android:layout_width="260dp"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_below="@+id/reg_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_email"
        android:layout_alignLeft="@+id/reg_email"
        android:layout_below="@+id/reg_email"
        android:layout_marginTop="22dp"
        android:text="Password *"
        android:textColor="#FFFFFFFC"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/reg_phone"
        android:layout_width="260dp"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_below="@+id/reg_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPhonetic"
        />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_email"
        android:layout_alignLeft="@+id/reg_email"
        android:layout_below="@+id/reg_password"
        android:layout_marginTop="22dp"
        android:text="Phone"
        android:textColor="#FFFFFFFC"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/reg_address"
        android:layout_width="260dp"
        android:textColor="#ffffffff"
        android:background="#11000000"
        android:layout_below="@+id/reg_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_email"
        android:layout_alignLeft="@+id/reg_email"
        android:layout_below="@+id/reg_phone"
        android:layout_marginTop="22dp"
        android:text="Postal Address"
        android:textColor="#FFFFFFFC"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rectangle_purple"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reg_address"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:text="Register" />


</RelativeLayout>